{
    "name": "Print Most Fancy",
    "description": "Prints all financial and host details to Factorio with flavour text",
    "reactions": [
        {
            "platform": "streamlabs",
            "type": "donation",
            "filteredActions": [
                {
                    "condition": "[VALUE] < 5",
                    "manipulator": "",
                    "action": "[ACTION_TaValue]"
                },
                {
                    "condition": "[VALUE] >= 5",
                    "manipulator": "[VALUE] * 2",
                    "action": "game.print('Thanks for the $[VALUE] donation [name], its worth [MODVALUE] to me')"
                }
            ]
        },
        {
            "valueType": "money",
            "filteredActions": [
                {
                    "condition": "[VALUE] < 5",
                    "manipulator": "",
                    "action": "[ACTION_TaValue]"
                },
                {
                    "condition": "[VALUE] >= 5",
                    "manipulator": "",
                    "action": "game.print('Cheers for the $[VALUE] support [name], it really helps')"
                }
            ]
        },
        {
            "valueType": "viewer",
            "filteredActions": [
                {
                    "condition": "[ALL]",
                    "manipulator": "",
                    "action": "[NOTHING]"
                }
            ]
        },
        {
            "valueType": "host",
            "filteredActions": [
                {
                    "condition": "[ALL]",
                    "manipulator": "",
                    "action": "game.print('[name] brought [VALUE] viewers with them')"
                }
            ]
        }
    ],
    "actions": [
        {
            "name": "TaValue",
            "description": "Say thanks for small value stuff",
            "effect": "game.print('Ta for $[VALUE] [name]')"
        }
    ]
}